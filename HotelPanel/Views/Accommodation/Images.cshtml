@model List<Data.DataModel.AccomodationImage>

<style>
    .select-image {
        width: 350px;
        margin: 3px;
        height: 300px;
        cursor: pointer;
    }
    .dis{
        display:inline-block;
    }
    .parent {
        position: absolute;
        z-index: 1;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        color: #fff;
        opacity: 1;
        visibility: visible;
        transition: ease all .3s;
        background-color: rgba(0,0,0,0.3);
        width: 350px;
        height:300px;
        margin: 3px;
        display:flex;
    }
</style>

@foreach (var Item in Model)
{
<div class="dis">
    <img src="@Item.Link" id="@Item.ImageID" class="select-image">
    <div></div>
</div>
}
<script type="text/javascript" src="~/Content/Scripts/jquery.js"></script>

<script>
    $(document).ready(function () {
        $(".select-image").click(function () {
            $("div").addClass("parent");
            //$(this).css("width","150px")
        })
    })
  
</script>