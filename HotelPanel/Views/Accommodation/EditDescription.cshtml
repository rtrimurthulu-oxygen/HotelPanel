@model Data.ViewModel.AccommodationModels.EditDescription
@{
    /**/

    string Message_Alert = Common.iUserStorage.Retrive<string>(Constants.PublicConstants.Session.Message_Error);
    string Message_Success = Common.iUserStorage.Retrive<string>(Constants.PublicConstants.Session.Message_Success);
}
@if (!String.IsNullOrEmpty(Message_Alert))
{
    <div class="alert alert-danger" role="alert">@Message_Alert</div>
    Common.iUserStorage.Remove(Constants.PublicConstants.Session.Message_Error);
}
@if (!String.IsNullOrEmpty(Message_Success))
{
    <div class="alert alert-success" role="alert">@Message_Success</div>
    Common.iUserStorage.Remove(Constants.PublicConstants.Session.Message_Success);
}
<script type="text/javascript" src="~/Content/Scripts/jquery.js"></script>
<!-- Include Editor style. -->
<link href='https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.8.4/css/froala_editor.min.css' rel='stylesheet' type='text/css' />
<link href='https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.8.4/css/froala_style.min.css' rel='stylesheet' type='text/css' />

<!-- Include JS file. -->
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.8.4/js/froala_editor.min.js'></script>

<div class="bgc-white p-20 bd">
    <h6 class="c-grey-900">Edit Accommodation Name</h6>
    <div class="mT-30">
        @using (Html.BeginForm("EditDescription", "Accommodation", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.AccommodationID)
            <div class="form-group">
                <label for="exampleInputEmail1">Accommodation Description</label>
                @Html.TextAreaFor(x => x.Description, new { @rows = "10", id = "froala-editor" })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</div>
<script>
    $(function () {
        $('textarea#froala-editor').froalaEditor()
    });
</script>